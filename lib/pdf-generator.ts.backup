import jsPDF from "jspdf";
import autoTable from "jspdf-autotable";

// ------------------------------------------------------
// TYPES
// ------------------------------------------------------

interface Organization {
  name: string;
  address?: string;
  city?: string;
  postal_code?: string;
  siret?: string;
}

interface Inspection {
  id: string;
  inspection_date: string;
  type_verification: "Périodique" | "Initiale" | "Remise en service";
  inspector_name: string;
  inspector_company: string;
  certification_number: string | null;
  result: "passed" | "conditional" | "failed";
  next_inspection_date: string;
  certificate_url: string | null;
  observations: string | null;

  assets: {
    id: string;
    name: string;
    serial_number: string;
    asset_categories: {
      name: string;
    } | null;
  };
}

interface Summary {
  total_assets: number;
  total_inspections: number;
  passed: number;
  conditional: number;
  failed: number;
  compliance_rate: number;
  overdue_count: number;
}

interface ReportData {
  organization: Organization;
  period: {
    start_date: string;
    end_date: string;
  };
  inspections: Inspection[];
  summary: Summary;
  generated_at: string;
}

// ------------------------------------------------------
// UTILS
// ------------------------------------------------------

function formatDateFR(dateStr: string): string {
  if (!dateStr) return "N/A";
  const d = new Date(dateStr);
  if (isNaN(d.getTime())) return dateStr;
  return `${String(d.getDate()).padStart(2, "0")}/${String(
    d.getMonth() + 1
  ).padStart(2, "0")}/${d.getFullYear()}`;
}

// ------------------------------------------------------
// MAIN FUNCTION
// ------------------------------------------------------

export function generateVGPReport(data: ReportData): jsPDF {
  const { organization, period, inspections, summary, generated_at } = data;

  // -----------------------
  // COLORS
  // -----------------------
  const blue = [15, 95, 166];
  const textPrimary = [33, 37, 41];
  const textMuted = [90, 90, 90];
  const borderGray = [210, 210, 210];
  const bgLight = [247, 249, 252]; // summary background

  const doc = new jsPDF();
  const pageWidth = doc.internal.pageSize.width;
  const pageHeight = doc.internal.pageSize.height;

  let y = 18;

  // ------------------------------------------------------
  // TITLE
  // ------------------------------------------------------
  doc.setFont("helvetica", "bold");
  doc.setFontSize(17);
  doc.setTextColor(...textPrimary);
  doc.text("RAPPORT DE CONFORMITÉ VGP", pageWidth / 2, y, { align: "center" });

  y += 6;
  doc.setFont("helvetica", "normal");
  doc.setFontSize(10);
  doc.setTextColor(...textMuted);
  doc.text("Vérifications Générales Périodiques", pageWidth / 2, y, {
    align: "center",
  });

  // LINE
  y += 10;
  doc.setDrawColor(...blue);
  doc.setLineWidth(0.4);
  doc.line(10, y, pageWidth - 10, y);
  y += 10;

  // ------------------------------------------------------
  // ORGANIZATION + PERIOD
  // ------------------------------------------------------
  doc.setFont("helvetica", "bold");
  doc.setFontSize(10);
  doc.setTextColor(...textPrimary);
  doc.text("ENTREPRISE :", 10, y);
  doc.setFont("helvetica", "normal");
  doc.text(organization.name || "N/A", 45, y);

  y += 6;
  doc.setFont("helvetica", "bold");
  doc.text("SIRET :", 10, y);
  doc.setFont("helvetica", "normal");
  doc.text(organization.siret || "N/A", 45, y);

  y += 6;
  doc.setFont("helvetica", "bold");
  doc.text("PÉRIODE DU RAPPORT :", 10, y);
  doc.setFont("helvetica", "normal");
  doc.text(
    `Du ${formatDateFR(period.start_date)} au ${formatDateFR(
      period.end_date
    )}`,
    60,
    y
  );

  y += 6;
  doc.setFont("helvetica", "bold");
  doc.text("DATE DE GÉNÉRATION :", 10, y);
  doc.setFont("helvetica", "normal");
  doc.text(formatDateFR(generated_at), 60, y);

  y += 12;

  // ------------------------------------------------------
  // SUMMARY BLOCK
  // ------------------------------------------------------
  const boxHeight = 40;
  doc.setDrawColor(...blue);
  doc.setFillColor(...bgLight);
  doc.rect(10, y, pageWidth - 20, boxHeight, "F");
  doc.rect(10, y, pageWidth - 20, boxHeight, "S");

  let boxY = y + 7;
  doc.setFont("helvetica", "bold");
  doc.setTextColor(...textPrimary);
  doc.text("RÉSUMÉ DE CONFORMITÉ", 14, boxY);

  boxY += 7;
  doc.setFont("helvetica", "normal");
  doc.setFontSize(9);

  const col1 = 14;
  const col2 = pageWidth / 2 + 2;

  doc.text(`Équipements suivis VGP : ${summary.total_assets}`, col1, boxY);
  doc.text(`Inspections réalisées : ${summary.total_inspections}`, col2, boxY);

  boxY += 5;
  doc.text(`Conformes : ${summary.passed}`, col1, boxY);
  doc.text(`Conditionnels : ${summary.conditional}`, col2, boxY);

  boxY += 5;
  doc.text(`Non conformes : ${summary.failed}`, col1, boxY);
  doc.text(`En retard : ${summary.overdue_count}`, col2, boxY);

  boxY += 6;
  doc.setFont("helvetica", "bold");
  doc.text(
    `Taux de conformité : ${summary.compliance_rate.toFixed(1)} %`,
    col1,
    boxY
  );

  y += boxHeight + 15;

  // ------------------------------------------------------
  // TABLE TITLE
  // ------------------------------------------------------
  doc.setFont("helvetica", "bold");
  doc.setFontSize(11);
  doc.setTextColor(...textPrimary);
  doc.text("DÉTAIL DES INSPECTIONS", 10, y);
  y += 5;

  // ------------------------------------------------------
  // TABLE DATA
  // ------------------------------------------------------
  const tableData = inspections.map((inspection) => {
    const result =
      inspection.result === "passed"
        ? "Conforme"
        : inspection.result === "conditional"
        ? "Conditionnel"
        : "Non conforme";

    return [
      formatDateFR(inspection.inspection_date),
      inspection.assets?.name || "N/A",
      inspection.assets?.serial_number || "N/A",
      inspection.assets?.asset_categories?.name || "N/A",
      inspection.type_verification || "Périodique",
      inspection.inspector_name,
      inspection.inspector_company,
      inspection.certification_number || "N/A",
      result,
      formatDateFR(inspection.next_inspection_date),
      inspection.observations || "RAS",
    ];
  });

  // ------------------------------------------------------
  // TABLE RENDER
  // ------------------------------------------------------
  autoTable(doc, {
    startY: y,
    head: [
      [
        "Date",
        "Équipement",
        "N° Série",
        "Catégorie",
        "Type vérif.",
        "Inspecteur",
        "Organisme",
        "N° Certif.",
        "Résultat",
        "Prochaine",
        "Observations",
      ],
    ],
    body: tableData,

    styles: {
      fontSize: 7,
      cellPadding: 2,
      lineColor: borderGray,
      lineWidth: 0.1,
      textColor: textPrimary,
    },

    headStyles: {
      fillColor: blue,
      textColor: [255, 255, 255],
      fontStyle: "bold",
      fontSize: 8,
    },

    alternateRowStyles: {
      fillColor: [250, 250, 250],
    },

    columnStyles: {
      0: { cellWidth: 16 },
      1: { cellWidth: 27 },
      2: { cellWidth: 18 },
      3: { cellWidth: 20 },
      4: { cellWidth: 20 },
      5: { cellWidth: 22 },
      6: { cellWidth: 22 },
      7: { cellWidth: 20 },
      8: { cellWidth: 20, halign: "center" }, // CENTRER STATUT
      9: { cellWidth: 20 },
      10: { cellWidth: 22 },
    },

    // CLICKABLE LINK
    didDrawCell: (data) => {
      if (data.section === "body" && data.column.index === 7) {
        const inspection = inspections[data.row.index];
        if (inspection?.certificate_url) {
          doc.link(data.cell.x, data.cell.y, data.cell.width, data.cell.height, {
            url: inspection.certificate_url,
          });

          // underline
          const text = data.cell.text[0];
          const textX = data.cell.x + 1.5;
          const textY = data.cell.y + data.cell.height - 1.5;
          const width = doc.getTextWidth(text);

          doc.setDrawColor(...blue);
          doc.setLineWidth(0.3);
          doc.line(textX, textY, textX + width, textY);
        }
      }
    },

    didDrawPage: () => {
      const pageCount = (doc as any).internal.getNumberOfPages();
      const current = (doc as any).internal.getCurrentPageInfo().pageNumber;

      // PAGE NUMBER
      doc.setFontSize(8);
      doc.setTextColor(...textMuted);
      doc.text(`Page ${current} / ${pageCount}`, pageWidth - 20, pageHeight - 12);

      // FOOTER
      doc.text(
        `Généré par TraviXO • ${formatDateFR(generated_at)}`,
        20,
        pageHeight - 12
      );

      doc.setFontSize(7);
      doc.setTextColor(140, 140, 140);
      doc.text(
        "Document destiné aux contrôles VGP conformément aux articles R.4323-21 à R.4323-28 du Code du travail.",
        pageWidth / 2,
        pageHeight - 5,
        { align: "center" }
      );
    },
  });

  return doc;
}
